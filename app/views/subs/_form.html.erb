<%= form_for(@sub) do |f| %>
  <% if @sub.errors.any? %>
      <div class="alert alert-danger">Oops, there was something wrong with the data submitted.

      <% @sub.errors.full_messages_for(:token).each do |e| %>
        <p class="alert"><%= e %></p>
      <% end %>
      </div>
  <% end %>

  <% if f.object.new_record? %>

  <div class="form-group"><%= f.label :name %> <span class="pull-right">No spaces, letters only</span><br>
  <%= f.text_field :name, :autofocus => true, :class => "form-control", :placeholder => "Name" %></div>

  <% end %>

  <div class="form-group"><%= f.label :title %> <span class="pull-right">140 characters max</span><br>
  <%= f.text_field :title, :class => "form-control", :placeholder => "Title" %></div>


  <div class="form-group"><%= f.label :description %> <span class="pull-right">512 characters max</span><br>
  <%= f.text_area :description, :class => "form-control", :placeholder => "Description" %>
  </div>

  
  <div class="actions">
  <% if f.object.new_record? %>
    <%= f.submit "Create Sub", :class => "btn btn-success" %>
  <% else %>
    <%= f.submit "Save", :class => "btn btn-success" %>
  <% end %>
  </div>
<% end %>
