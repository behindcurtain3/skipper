<div class="well">
<%= form_for(@sub, :html => {:class => "form-horizontal"}) do |f| %>
<fieldset>
  <legend><%= if f.object.new_record? then t 'sub.new' else t 'sub.edit' end %></legend>
  
  <% if f.object.new_record? %>

  <div class="form-group">
    <%= f.label :name, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :name, :autofocus => true, :class => "form-control", :placeholder => "Name" %>
      <span class="help-block">No spaces, letters and numbers only</span>
    </div>
  </div>

  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => "form-control", :placeholder => "Title" %>
      <span class="help-block">140 characters max</span>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :description, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :description, :class => "form-control", :placeholder => "Description" %>
      <span class="help-block">512 characters max</span>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <% if f.object.new_record? %>
        <%= f.submit t('sub.create'), :class => "btn btn-primary" %>
      <% else %>
        <%= f.submit t('sub.save'), :class => "btn btn-primary" %>
        <%= link_to t('cancel'), sub_path(@sub), :class => "btn btn-default" %>
      <% end %>
    </div>
  </div>
</fieldset>
<% end %>
</div>
