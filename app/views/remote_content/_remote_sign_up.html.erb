<div class="modal fade" id="sign_up_modal">
	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :remote => true, :format => :js, :html => {:class => "form-signin form-horizontal"}) do |f| %>
  <div class="modal-dialog">
  	<div class="modal-content">
  		<div class="modal-header">
  			<button aria-hidden="true" class="close" data-dismiss="modal" type="button">x</button>
  			<h4 class="modal-title" id="SignInModal"><%= t :user_create %></h4>
  		</div>
  		<div class="modal-body">			  
				<div class="form-group">
					<%= f.label :username, :class => "col-lg-3 control-label" %>
					<div class="col-lg-9">
				  	<%= f.input :username, :autofocus => true, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Username" %>
				  </div>
				</div>
			  <div class="form-group">
			  	<%= f.label :email, :class => "col-lg-3 control-label" %>
			  	<div class="col-lg-9">
				  	<%= f.input :email, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Email" %>
					</div>
				</div>
			  <div class="form-group">
			  	<%= f.label :password, :class => "col-lg-3 control-label" %>
			  	<div class="col-lg-9">
					  <%= f.input :password, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Password" %>
					</div>
			  </div>
			  <div class="form-group">
			  	<%= f.label :password_confirmation, :class => "col-lg-3 control-label" %>
			  	<div class="col-lg-9">
				  	<%= f.input :password_confirmation, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Confirm password" %>
				  </div>
				</div>
				<div class="form-group">
					<div class="col-lg-9 col-lg-offset-3">
	  				<%= f.button :submit, t(:user_submit), :class => "btn btn-sm btn-primary" %>
	  				<a class="btn btn-sm btn-link" data-dismiss="modal" href="#">Cancel</a>
	  			</div>
	  		</div>
		  </div>
		  <div class="modal-footer">
		  	<%= link_to "Already have an account?", new_user_session_path %>
			  <%= link_to "Forgot your password?", new_user_password_path %>
  		</div>
		</div>	
  </div>
  <% end %>
</div>
