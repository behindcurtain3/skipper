<div class="modal fade" id="sign_up_modal">
	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :remote => true, :format => :js, :html => {:class => "form-signin"}) do |f| %>
  <div class="modal-dialog">
  	<div class="modal-content">
  		<div class="modal-header">
  			<button aria-hidden="true" class="close" data-dismiss="modal" type="button">x</button>
  			<h4 class="modal-title" id="SignInModal">Create an account</h4>
  		</div>
  		<div class="modal-body">
			  <p>Add your details to create an account</p>
			  
				<div class="form-group">
			  	<%= f.input :username, :autofocus => true, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Username" %>
			  </div>
			  <div class="form-group">
			  	<%= f.input :email, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Email" %>
				</div>
			  <div class="form-group">
				  <%= f.input :password, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Password" %>
			  </div>
			  <div class="form-group">
				  <%= f.input :password_confirmation, :label => false, :input_html => {:class => 'form-control'}, :placeholder => "Confirm password" %>
				</div>
			  <%= link_to "Already have an account?", new_user_session_path %>
			  <%= link_to "Forgot your password?", new_user_password_path %>
		  </div>
		  <div class="modal-footer">
	  		<div class="form-actions">
	  			<a class="btn btn-sm" data-dismiss="modal" href="#">Cancel</a>
	  			<%= f.button :submit, "Create account", :class => "btn btn-sm btn-success" %>
	  		</div>
  		</div>
		</div>	
  </div>
  <% end %>
</div>
